<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="popup_window_animation">
        <item name="android:windowEnterAnimation">@animator/slide_in_bottom</item>
        <item name="android:windowExitAnimation">@animator/slide_out_bottom</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <style name="PreferenceStyle" parent="android:Widget.TextView">
        <item name="android:textColorPrimary">#833B35</item>
        <item name="android:textColorSecondary">#7CAF2519</item>
        <item name="android:textColorTertiary">#FF5042</item>
    </style>

</resources>
