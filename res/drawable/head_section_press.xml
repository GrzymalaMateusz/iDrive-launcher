<?xml version="1.0" encoding="UTF-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item>
        <shape android:shape="rectangle" >
            <gradient
                android:angle="360"
                android:centerColor="#e33b2b"
                android:endColor="#5c2326"
                android:gradientRadius="360"
                android:startColor="#5c2326"
                android:type="linear" />
            <stroke
                android:width="1dp"
                android:color="#4b0908" />

        </shape>
    </item>
    <item
        android:bottom="2dp"
        android:left="0dp"
        android:right="0dp"
        android:top="2dp">
        <shape android:shape="rectangle" >
            <gradient android:angle="270"
                android:endColor="#b22719"
                android:centerColor="#970d05"
                android:startColor="#4b0908"
                android:centerX="0.40"
                android:type="linear" />
        </shape>
    </item>

</layer-list>